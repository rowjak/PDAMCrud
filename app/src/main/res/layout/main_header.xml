<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/ic_background"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/xxx_logo"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <com.github.islamkhsh.CardSliderViewPager
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/viewPager"
            android:layout_marginTop="8dp"
            app:cardSlider_smallScaleFactor="0.9"
            app:cardSlider_smallAlphaFactor="0.5"
            app:cardSlider_otherPagesWidth="12dp"
            app:cardSlider_pageMargin="8dp"
            app:cardSlider_cardCornerRadius="3dp"
            app:cardSlider_indicator="@id/indicator"
            app:auto_slide_time="3"
            />

        <com.github.islamkhsh.CardSliderIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indicator"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:indicatorsToShow="5"
            android:layout_gravity="right"
            />

    </LinearLayout>

</RelativeLayout>